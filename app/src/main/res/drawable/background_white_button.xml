<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape>
            <padding
                android:bottom="3dp"
                android:left="1dp"
                android:right="1dp"
